<% content_for :javascript_includes do %>
  <%= javascript_include_tag "owl.carousel" %>
  <%= stylesheet_link_tag  "owl.carousel", "animate", "owl.theme" %>
<% end %>

<script>
  $(document).ready(function(){
    $('.sponsor, .partnership').owlCarousel({
      animateOut: 'slideOutDown',
      animateIn: 'flipInX',
      loop: true,
      autoplay: true,
      autoplayHoverPause: true,
      items: 1,
      nav : true,
      dotsEach: true,
      autoplaySpeed: 2000,
      navText : ['<span class="fa-stack"><i class="fa fa-circle fa-stack-1x"></i><i class="fa fa-chevron-circle-left fa-stack-1x fa-inverse"></i></span>','<span class="fa-stack"><i class="fa fa-circle fa-stack-1x"></i><i class="fa fa-chevron-circle-right fa-stack-1x fa-inverse"></i></span>']
    });
  });
</script>

<section class="main-section <%= manage_menu %>">
  <div class="container">
    <div class="row">
      <div class="col-12 header-n-breadcrumb">
        <div class="row">
          <div class="col-12 col-md-6">
            <h2>Sponsor</h2>
          </div>
          <div class="col-12 col-md-6 align-self-center">
            <nav aria-label="breadcrumb">
              <ol class="breadcrumb">
                <li class="breadcrumb-item"><%= link_to "HOME", root_path %></li>
                <li class="breadcrumb-item active" aria-current="page">SPONSOR AND PARTNERSHIP</li>
              </ol>
            </nav>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<section id="header" style='margin-top:0px'>
  <div class="row no-gutters f-banner mb-5">
    <div class="col-12">
        <div class="sponsor owl-carousel owl-theme">
          <% @sponsors.each do |sponsor| %>
            <div class="item">
              <%= image_tag sponsor.image.url(:large) %>
            </div>
          <% end %>
        </div>
    </div>
  </div>
</section>

<section id="header" style='margin-top:0px'>
  <div class="container">
    <div class="row">
      <div class="col-12 header-n-breadcrumb">
        <div class="row">
          <div class="col-12 col-md-6">
            <h2>Partnership</h2>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="row no-gutters f-banner mb-5">
    <div class="col-12">
        <div class="partnership owl-carousel owl-theme">
          <% @partnerships.each do |partnership| %>
            <div class="item">
              <%= image_tag partnership.image.url(:large) %>
            </div>
          <% end %>
        </div>
    </div>
  </div>
</section>
