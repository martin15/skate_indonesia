<section class="main-section">
  <div class="container">
    <div class="row">
      <div class="col-12 header-n-breadcrumb">
        <div class="row">
          <div class="col-12 col-md-6">
            <h2>LOGIN</h2>
          </div>
          <div class="col-12 col-md-6 align-self-center">
            <nav aria-label="breadcrumb">
              <ol class="breadcrumb">
                <li class="breadcrumb-item"><%= link_to "Home", root_path %></li>
                <li class="breadcrumb-item active" aria-current="page">Login</li>
              </ol>
            </nav>
          </div>
        </div>
      </div>
      <div class="col-12">
        <%= render :partial => "shared/flash" %>
        <div class="container">
          <div class="row">
            <div class="col-12 col-sm-8 col-md-6 login">
              <h1>Login</h1>

              <%= form_tag login_create_path do %>
                <div class="form-group">
                  <%= label_tag :email %><br />
                  <%= text_field_tag :email, nil,autofocus: true, :class => "form-control" %>
                </div>
                <div class="form-group">
                  <%= label_tag :password %><br />
                  <%= password_field_tag :password, nil, autocomplete: "off", :class => "form-control" %>
                </div>
                <div class="form-group">
                  <%= submit_tag "Log in", :class => "btn btn-green" %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
