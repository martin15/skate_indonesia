<section class="admin-section-content">
  <div class="container">
    <div class="row">
      <div class="col-12 header-n-breadcrumb">
        <div class="row">
          <div class="col-12 col-md-6">
            <h2>BANNER</h2>
          </div>
          <div class="col-12 col-md-6 align-self-center">
            <nav aria-label="breadcrumb">
              <ol class="breadcrumb">
                <li class="breadcrumb-item"><%= link_to "Home", root_path %></li>
                <li class="breadcrumb-item active" aria-current="banner">Banners</li>
              </ol>
            </nav>
          </div>
        </div>
      </div>
      <div class="col-sm-12 admin-banners">
        <%= render :partial => "shared/flash" %>
        <p><%= link_to "Add new banner", new_admin_banner_path, class: "btn btn-primary" %></p>
        <table class="table table-hover">
          <thead>
            <tr>
              <th>#</th>
              <th>Image</th>
              <th>URL</th>
              <th>Order</th>
              <th>&nbsp;</th>
            </tr>
          </thead>
          <tbody>
            <% @banners.each_with_index do |banner, x| %>
              <tr>
                <th scope="row"><%= @no+x+1 %></th>
                <td><%= image_tag banner.image.url(:thumb) %></td>
                <td><%= banner.url %></td>
                <td><%= banner.order || '-' %></td>
                <td>
                  <%= link_to "Edit", edit_admin_banner_path(banner.id, :banner => params[:banner]), :class => "btn btn-success" %>
                  <%= link_to "Delete", admin_banner_path(banner.id, :banner => params[:banner] ), :method => :delete,
                                        data: {:confirm => "Are you sure?"}, :class => "btn btn-danger" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>

        <div class="col-xs-12 pagination justify-content-center"><%= paginate @banners %></div>
      </div>
    </div>
  </div>
</section>

